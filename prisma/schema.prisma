generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Cell {
  id        String   @id @default(uuid())
  userId    String
  zoom      Int
  tileX     Int
  tileY     Int
  cellX     Int
  cellY     Int
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])

  @@unique([zoom, tileX, tileY, cellX, cellY], name: "cell_position")
  @@index([zoom, tileX, tileY])
  @@index([userId, updatedAt])
}

model User {
  id         String        @id @default(uuid())
  username   String        @unique
  password   String
  score      Int           @default(0)
  ink_amount Int           @default(1000)
  createdAt  DateTime      @default(now())
  cells      Cell[]
  participants Participant[]
  
  @@map("users")
}

model Button {
  id        String   @id @default(uuid())
  tile_x    Int
  tile_y    Int
  cell_x    Int
  cell_y    Int
  date      DateTime @default(now())
  success   Int      @default(0)
  fail      Int      @default(0)
  participants Participant[]

  @@map("buttons")
}

model Participant {
  id        String   @id @default(uuid())
  button_id String
  user_id   String
  isPush    Boolean  @default(false)
  button    Button   @relation(fields: [button_id], references: [id])
  user      User     @relation(fields: [user_id], references: [id])

  @@map("participants")
}
